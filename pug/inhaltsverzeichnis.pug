extends ../templates/layout

mixin listItems(start, end)
	ol(start=start + 1)
		- for (var i = start; i < end; i++)
			- const itemTitle = keys[i]
			- const item = list[itemTitle]
			li
				a(href=item.address)= itemTitle

block main
	- const progressIndex = 30
	- const title = "Inhaltsverzeichnis"
	h1= title
	#inhaltsverzeichnis
		+listItems(0, progressIndex)
		#bearbeitungsfortschritt Bearbeitungsfortschritt
		+listItems(progressIndex, keys.length)