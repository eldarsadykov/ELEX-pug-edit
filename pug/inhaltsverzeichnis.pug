extends ../templates/layout

mixin listItems(startIndex, endIndex)
	ol(start=startIndex + 1)
		- for (var i = startIndex; i < endIndex; i++)
			- const itemTitle = keys[i]
			- const item = list[itemTitle]
			li
				a(href=item.address)= itemTitle

block page-vars
	- const startEmptyPages = 6;
	- const endEmptyPages = 2;
	- const totalPages = 296;
	- const page = 114;
	- const ratio = (page - startEmptyPages) / (totalPages - (startEmptyPages + endEmptyPages));
	- const progressPercents = (ratio * 100).toFixed(2)
	- const progressTitle = "Hahnenzierden"
	- const progressIndex = list[progressTitle].index

	- const title = "Inhaltsverzeichnis"

block main
	article#inhaltsverzeichnis
		+listItems(0, progressIndex)
		article#bearbeitungsfortschritt= `Bearbeitungsfortschritt: ${progressPercents}%`
		+listItems(progressIndex, keys.length)